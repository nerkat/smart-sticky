generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
}

model StickySettings {
  id        String   @id @default(cuid())
  shop      String
  themeId   String
  enabled   Boolean  @default(true)
  position  String
  offset    Int
  updatedAt DateTime @updatedAt

  @@unique([shop, themeId])
}
